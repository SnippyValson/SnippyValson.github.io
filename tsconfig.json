{
    "compilerOptions": {
        "lib": [
            "ES2019",
            "DOM",
            "webworker"
        ],
        "baseUrl": "src",
        "paths": {
            "@shared/*": [
                "./shared/*"
            ],
            "@views/*": [
                "./views/*"
            ]
        },
        "outDir": "../dist/",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
    }
}